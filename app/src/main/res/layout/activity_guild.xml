<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/access_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:visibility="gone"
        android:background="@drawable/guide_btn_bg"
        android:textSize="@dimen/sub_title"
        android:text="@string/access_btn_text"
        android:textColor="@color/white"/>

    <com.cetnaline.findproperty.widgets.DotIndicator
        android:id="@+id/dot_indicator"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:indicator_icon="@drawable/indicator_selector"
        app:indicator_margin="10dp"
        app:indicator_smooth="true" />
</RelativeLayout>