<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotIndicator">
        <attr name="indicator_icon" format="reference" />
        <attr name="indicator_margin" format="dimension" />
        <attr name="indicator_smooth" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CodeInputView">
        <attr name="code_num" format="integer"/>
        <attr name="input_width" format="dimension"/>
        <attr name="item_padding" format="dimension"/>
        <attr name="item_focus_drawable" format="reference"/>
        <attr name="item_inputed_drawable" format="reference"/>
        <attr name="item_uninput_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AnimationLayout">
        <attr name="show_animation" format="reference"/>
        <attr name="hide_anima" format="reference"/>
    </declare-styleable>
</resources>